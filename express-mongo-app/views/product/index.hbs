<h1>Product List</h1>
<a href="/product/add" class="btn orange">Add</a>
<table class="responsive-table">
  <tr>
    <th>Product Name</th>
    <th>Product Price</th>
    <th>Product Image</th>
    <th>Product Category</th>
  </tr>
  {{#each productList}}
    <tr>
      <td>{{name}}</td>
      <td>{{price}}$</td>
      <td>
        <img src="{{image}}" alt="image" width="100px" height="100px" /></td>
      <td>{{category.name}}</td>
      <td><a href="/product/edit/{{_id}}" class="btn blue">Edit</a></td>
      <td><a
          href="/product/delete/{{_id}}"
          class="btn red"
          onclick="return confirm('Do you want to delete ?')"
        >Delete</a></td>
    </tr>
  {{/each}}
</table>