<h1>Edit New Category</h1>
<form action="" method="post" class="col s12">
  <div class="row">
    <div class="input-field col s12">
      <input
        type="text"
        id="name"
        name="name"
        value="{{categoryValue.name}}"
        required
      />
      <label for="name">Name</label>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12">
      <input
        type="text"
        id="description"
        name="description"
        value="{{categoryValue.description}}"
        required
      />
      <label for="description">Description</label>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12">
      <button class="btn green">Edit</button>
    </div>
  </div>
</form>