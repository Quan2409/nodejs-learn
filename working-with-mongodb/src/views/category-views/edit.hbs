<h1>Edit New Category</h1>
<form action="" method="post">
  <div>
    <label for="">
      Name
      <input
        type="text"
        name="name"
        placeholder="Category Name"
        value={{categoryValue.name}}
        required
      />
    </label>
  </div>

  <div>
    <label for="">
      Description
      <input
        type="text"
        name="description"
        placeholder="Category Description"
        value={{categoryValue.description}}
        required
      />
    </label>
  </div>

  <div>
    <button>Edit</button>
  </div>
</form>