<h1>Product List</h1>
<a class="btn yellow" href="/product/add">Add</a>
<form action="" method="post">
  <input type="search" placeholder="Search.." />
</form>

<table border="1">
  <tr>
    <th>Product Name</th>
    <th>Product Price</th>
    <th>Product Image</th>
    <th>Product Category</th>
    <th></th>
  </tr>

  {{#each products}}
    <tr>
      <td>{{name}}</td>
      <td>{{price}}</td>
      <td>
        <img src={{image}} alt="img" width="100" height="100" />
      </td>
      <td>{{category.name}}</td>
      <td>
        <a class="btn blue" href="/product/edit/{{_id}}">Edit</a>
        <a
          class="btn red"
          href="/product/delete/{{_id}}"
          onclick="return confirm('Are you sure want to delete ?')"
        >Delete</a>
      </td>
    </tr>
  {{/each}}
</table>