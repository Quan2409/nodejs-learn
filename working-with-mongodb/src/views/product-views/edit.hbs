<h1>Edit Product</h1>
<form action="" method="post">
  <div>
    <label>
      Name
      <input
        type="text"
        name="name"
        placeholder="Product Name"
        value={{productValue.name}}
        required
      />
    </label>
  </div>

  <div>
    <label>
      Price
      <input
        type="number"
        name="price"
        placeholder="Product Price"
        value={{productValue.price}}
        required
      />
    </label>
  </div>

  <div>
    <label>
      image
      <input
        type="url"
        name="image"
        placeholder="Product Image"
        value={{productValue.image}}
        required
      />
    </label>
  </div>

  <div>
    <img src={{productValue.image}} alt="" width="100" height="100" />
  </div>

  <div>
    <select name="category" id="">
      {{#each categoryList}}
        <option value={{_id}}>{{name}}</option>
      {{/each}}
    </select>
  </div>

  <div>
    <button>Edit</button>
  </div>
</form>