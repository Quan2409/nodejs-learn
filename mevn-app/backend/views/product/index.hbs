<nav>
  <div class="nav-wrapper">
    <a href="#" class="brand-logo">Logo</a>
    <ul id="nav-mobile" class="right hide-on-med-and-down">
      {{#if isLogin}}
        <li><a href="/auth/logout" class="btn blue">Sign Out(
            {{username}})
          </a></li>
      {{else}}
        <li><a href="/auth/signin" class="btn blue">Sign In</a></li>
      {{/if}}

      <li><a href="/product">All Products</a></li>

      {{#unless hideItem}}
        <li><a href="/product/add">New Products</a></li>
      {{/unless}}
    </ul>
